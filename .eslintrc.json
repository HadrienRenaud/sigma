{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
          "jsx": true,
          "experimentalObjectRestSpread": true
        }
    },

    "env": {
        "browser": true,
        "es6": true
    },

    "plugins": [
        "react"
    ],

    "extends": ["eslint:recommended", "plugin:react/recommended"],

    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-new-object": 1,
        "object-shorthand": 1,
        "no-console": 0,
        "no-var": 0,
        "prefer-const": 1,
        "no-unused-vars": "off",
        "react/prop-types": 0,
        "react/no-unescaped-entities": 0,
        "no-array-constructor": 1,
        "prefer-rest-params": 1,
        "prefer-spread": 1,
        "prefer-arrow-callback": 1
    }
}
